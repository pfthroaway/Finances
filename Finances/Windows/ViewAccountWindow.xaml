<Window x:Name="WindowViewAccount" x:Class="Finances.ViewAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        Title="View Account" WindowStartupLocation="CenterScreen" Closing="WindowViewAccount_Closing">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Width="200" Margin="0,0,10,0">
            <TextBlock x:Name="LblAccountName" Text="{Binding Path=Name}" TextWrapping="Wrap"  FontSize="20" Margin="0,0,0,10" />
            <TextBlock x:Name="LblType" Text="{Binding Path=Type}" FontSize="20" Margin="0,0,0,10" />
            <TextBlock x:Name="LblBalance" Text="{Binding Path=BalanceToStringWithText}" FontSize="20" Margin="0,0,0,10" />
        </StackPanel>
        <ListView x:Name="LVTransactions" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Height="610" SelectionChanged="LVTransactions_SelectionChanged" AlternationCount="2" SelectionMode="Single">
            <ListView.View>
                <GridView ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=DateToString}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Date" Click="LVTransactionsColumnHeader_Click" Content="Date" />
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="200" DisplayMemberBinding="{Binding Path=Payee}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Payee" Click="LVTransactionsColumnHeader_Click" Content="Payee" />
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="200" DisplayMemberBinding="{Binding Path=MajorCategory}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="MajorCategory" Click="LVTransactionsColumnHeader_Click" Content="Major Category" />
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="200" DisplayMemberBinding="{Binding Path=MinorCategory}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="MinorCategory" Click="LVTransactionsColumnHeader_Click" Content="Minor Category" />
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="200" DisplayMemberBinding="{Binding Path=Memo}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Memo" Click="LVTransactionsColumnHeader_Click" Content="Memo" />
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=OutflowToString}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Outflow" Click="LVTransactionsColumnHeader_Click" Content="Outflow" />
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=InflowToString}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Inflow" Click="LVTransactionsColumnHeader_Click" Content="Inflow" />
                        </GridViewColumn.Header>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom" Margin="0,0,10,0">
            <Button x:Name="BtnNewTransaction" Height="30" Width="175" Click="BtnNewTransaction_Click" Margin="0,0,0,10" IsDefault="True">
                <AccessText Text="_New Transaction" />
            </Button>
            <Button x:Name="BtnNewTransfer" Height="30" Width="175" Click="BtnNewTransfer_Click" Margin="0,0,0,10">
                <AccessText Text="_New Transfer" />
            </Button>
            <Button x:Name="BtnModifyTransaction" Height="30" Width="175" Click="BtnModifyTransaction_Click"  Margin="0,0,0,10" IsEnabled="False">
                <AccessText Text="_Modify Transaction" />
            </Button>
            <Button x:Name="BtnDeleteTransaction" Height="30" Width="175" Click="BtnDeleteTransaction_Click"  Margin="0,0,0,10" IsEnabled="False">
                <AccessText Text="_Delete Transaction" />
            </Button>
            <Button x:Name="BtnSearchTransactions" Height="30" Width="175" Click="BtnSearchTransactions_Click"  Margin="0,0,0,10">
                <AccessText Text="_Search Transactions" />
            </Button>
            <Button x:Name="BtnRenameAccount" Height="30" Width="175" Click="BtnRenameAccount_Click"  Margin="0,0,0,10">
                <AccessText Text="_Rename Account" />
            </Button>
            <Button x:Name="BtnDeleteAccount" Height="30" Width="175" Click="BtnDeleteAccount_Click"  Margin="0,0,0,10">
                <AccessText Text="_Delete Account" />
            </Button>
            <Button x:Name="BtnBack" Height="30" Width="175" Click="BtnBack_Click" IsCancel="True">
                <AccessText Text="_Back" />
            </Button>
        </StackPanel>
    </Grid>
</Window>